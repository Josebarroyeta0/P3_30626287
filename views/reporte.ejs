    <style>
       .producto {
        background:#24262b;
  padding: 10px;
  margin: 10px;
 color: #fff;
  text-align: left;
            font-family: 'Times New Roman', Times, serif;
}

body{
     background-image: url("https://thumbs.dreamstime.com/z/patr%C3%B3n-transparente-de-juguetes-para-ni%C3%B1os-ilustraci%C3%B3n-vector-fondo-beb%C3%A9-y-ni%C3%B1as-dise%C3%B1o-tejido-desde-el-icono-l%C3%ADnea-232241634.jpg");
      margin: 0%;
    
    }



div.lista{
    box-shadow: 0 4px 8px #24262b, 0 6px 20px rgba(0,0,0,0,19);
    background:#24262b;
    margin: 10px;
    border-radius: 15px;
    color: #fff;

}

.lista {
  display: flex;
  flex-direction: column;
  background-color: #fff;
border: 1px solid #ccc;
}

.lista> p{
    img{
    width: 300px;
    height: 300px;
    object-fit: cover;
}
}

div.cuadricula {
    box-shadow: 0 4px 8px #24262b, 0 6px 20px rgba(0,0,0,0,19);
    float: left;
    width: 300px;
    background:#24262b;
    margin: 10px;
    border-radius: 15px;
    margin-left: 100px;
    height: 700px;
    color: #fff;
}
.cuadricula{
    display: grid;
    margin-bottom: 10px;
    padding: 10px;
    background-color: #fff;
    border: 1px solid #ccc;
}

.cuadricula> p{
    img{
    width: 100px;
    height: 100px;
    object-fit: cover;
}
}



        img{
    width: 100px;
    height: 100px;
    }

    h1{
        color: white;
            text-align: left;
            font-family: 'Times New Roman', Times, serif;
        }


    
    </style>
</head>

<body>
    <header>

        <nav class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
    
            <div class="caja">
                <h1>La isla de los juguetes</h1>
            </div>
    
    
            <div class="container-fluid">
                
                <a class="navbar-brand" href='#'><strong>Pagina Reporte</strong></a><button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
    
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav nav justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link  btn btn-outline-primary" aria-current="page"
                                href="/categorias">Categorias</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-primary" href="/productos">Productos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-primary" href="/imagenes">Imagenes</a>
                            
                        </li>
                        <li class="nav-item">
                            <button id="cambiarVista" class="btn btn-success">Cambiar Vista</button>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link return-button" href="/logout">Salir</a>
                        </li>
                       
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    

    <% if (datos) {%>
        <% for(let i = 0; i < datos.length; i++) { %>
            <div class="producto">
                <p><%= datos[i].productoNombre %></p>
                <p><%= datos[i].precio %></p>
                <p><%= datos[i].marca %></p>
                <p><%= datos[i].Edad %></p>
                <p><%= datos[i].descripcion %></p>
                <p><%= datos[i].categoriaNombre %></p>
                <p><img class="imagen-producto" src="<%= datos[i].url %>"></p>
            </div>
        <% } %>
    <% } else { %>
            <p>No hay productos en el sistema</p>
        <% } %>
    
<script>
document.getElementById('cambiarVista').addEventListener('click', function() {
  let productos = document.getElementsByClassName('producto');
  for(let producto of productos) {
    if(producto.classList.contains('lista')) {
      producto.classList.remove('lista');
      producto.classList.add('cuadricula');
    } else {
      producto.classList.remove('cuadricula');
      producto.classList.add('lista');
    }
  }
});
</script>

   
   
    
   
