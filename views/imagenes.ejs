                    </ul>
                </div>
            </div>
        </nav>
          

        <div class="container">
            <table border="1" class="table table-hover table-dark table-striped">
                <tr>
                    <th>NÂ°</th>
                    <th>Imagen</th>
                    <th>Destacado</th>
                    <td><a class="btn btn-success" href="/imgagg">Agregar</a></td>
                </tr>
                <tr>
                    <% if (imagenes) { %>
                        <% for (let i = 0; i < imagenes.length; i++){  %>
                            <% if (imagenes) { %>
                                <tr>
                                    <td><%= (i + 1) %></td>
                                    <div class="Imagen">
                                    <td><img src="<%= imagenes[i].url %>"></td>
                                    </div>
                                   
                                    <td><%= imagenes[i].destacado %></td>
                                    <td> 
                                        <div class="input-group">
                                            <a href="/imgdelete/<%= imagenes[i].id%>" class="btn btn-danger">Eliminar</a>
                                            <a href="/imgedit/<%= imagenes[i].id%>" class="btn btn-info">Actualizar</a>
                                        </div>
                                    </td>
                                </tr>    
                            <% } %>
                        <% } %>
                    <% } else { %>
                            <tr>
                                <th>No hay imagenes en el sistema</th>
                            </tr>
                        <% }   %>
                </tr>
            </table>
        </div>
    
